@{
    ViewBag.Title = "ContactUs";
}

<style type="text/css">
.jumbotron {
background: #cfe8f5;
border-radius: 0px;
}
.jumbotron-sm { 
 padding-top: 10px;
padding-bottom: 10px; }
.jumbotron small {
}
.h1 small {
font-size: 17px;
}
</style>

<div class="panel panel-info topmar-10">
    <div class="panel-heading">
        <div class="jumbotron jumbotron-sm">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-lg-12 nolrpad">
                        <h1 class="h1">
                            <span class="fa fa-phone-square"></span>
                            Contact us <small>Feel free to contact us</small>
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
 @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
 { 
       <div class="panel-body">
       <div class="row">
           <div class="col-md-8">

               @if(TempData["message"] != null) { 
               <div class="alert alert-success alert-dismissable">
                   <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                   <strong>Success!</strong> @TempData["message"]
               </div>
               }
               <div class="well well-sm">
                   <form>
                       <div class="row">
                           <div class="col-md-6">
                               <div class="form-group">
                                   <label for="name">
                                       Name
                                   </label>
                                   <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" required="required" />
                               </div>
                               <div class="form-group">
                                   <label for="email">
                                       Email Address
                                   </label>
                                   <div class="input-group">
                                       <span class="input-group-addon">
                                           <span class="glyphicon glyphicon-envelope"></span>
                                       </span>
                                       <input type="email" class="form-control" id="email" placeholder="Enter email" required="required" />
                                   </div>
                               </div>
                               <div class="form-group">
                                   <label for="subject">
                                       Subject
                                   </label>
                                   <select id="subject" name="subject" class="form-control" required="required">
                                       <option value="na" selected="">Choose One:</option>
                                       <option value="suggestions">Suggestions</option>
                                       <option value="product">Service Support</option>
                                   </select>
                               </div>
                           </div>
                           <div class="col-md-6">
                               <div class="form-group">
                                   <label for="name">
                                       Message
                                   </label>
                                   <textarea name="message" id="message" class="form-control" rows="9" cols="25" required="required"
                                             placeholder="Message"></textarea>
                               </div>
                           </div>
                           <div class="col-md-12">
                               <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                                   Send Message
                               </button>
                           </div>
                       </div>
                   </form>
               </div>
           </div>
           <div class="col-md-4">
               <form>
                   <legend><span class="glyphicon glyphicon-globe"></span> Our office</legend>
                   <address>
                       <strong>Savvy Corporate Services Pvt Ltd</strong><br />
                       276/4 Govindpuri, Kalkaji<br>
                       New Delhi, DL 110019<br>
                       CIN No: U74140DL2011PTC217345<br /><br />
                       <i class="fa fa-mobile fa-1x"> +91 9810056481</i><br />
                       <i class="fa fa-phone fa-1x"> +91 11 2647 8242</i><br />
                       <i class="fa fa-phone fa-1x"> +91 11 4906 4200 </i>
                    </address>
                   <address>
                       <strong>Contact us on</strong><br>
                       <a href="mailto:#">savvybackoffice@gmail.com</a> <br />
                       <a href="mailto:#">vineet@savvycorporate.in</a><br/>
                       <a href="mailto:#">info@savvycorporate.in</a>
                   </address>
               </form>
           </div>
       </div>
   </div>
 }
</div>
